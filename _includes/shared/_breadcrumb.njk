<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/">Home</a></li>
  {% set url = '' %}
  {% for part in page.url.split('/') %}
    {% if part %}
      {% set url = url + '/' + part %}
      {% if loop.last %}
        <li class="breadcrumb-item active">{{ part | titleCase }} X</li>
      {% else %}
        <li class="breadcrumb-item">
          <a href="{{ url }}">{{ part | titleCase }}</a>
        </li>
      {% endif %}
    {% endif %}
  {% endfor %}
</ol>
